{
  "name": "hendrix",
  "version": "0.0.0",
  "description": "A CLI scaffolding tool for creating new scripts, pages and configuration files.",
  "main": "bin/index.js",
  "bin": {
    "hendrix": "./bin/index.js",
    "h": "./bin/index.js"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "tslint -c tslint.json 'src/**/*.ts' && tsfmt -r",
    "develop": "nodemon",
    "build": "rm -rf bin/src/templates && cp -R src/templates bin/src/templates && cross-env NODE_ENV=production tsc",
    "start": "ts-node ./",
    "commit": "npm run build && git add . && npx git-cz",
    "ci": "npm run lint && npm run test && npm publish",
    "docs": "rm -rf docs && npx jsdoc src -d ./docs -R README.md -P package.json "
  },
  "keywords": [
    "generator",
    "scaffold",
    "boilerplate"
  ],
  "author": "Sean W. Lawrence",
  "license": "MIT",
  "dependencies": {
    "chalk": "^2.4.1",
    "fuzzy": "^0.1.3",
    "inquirer": "^6.2.0",
    "inquirer-autocomplete-prompt": "^1.0.1",
    "mustache": "^2.3.2"
  },
  "devDependencies": {
    "@types/inquirer": "0.0.43",
    "@types/jest": "^23.3.2",
    "@types/mustache": "^0.8.31",
    "@types/node": "^10.11.0",
    "commitizen": "^3.0.2",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^23.5.0",
    "nodemon": "^1.18.4",
    "ts-jest": "^23.10.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3",
    "typescript-formatter": "^7.2.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
